{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                }
            }
        },
        "haskell": {
            "command": "hie-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {}
            }
        }
    },
    "python.autoUpdateLanguageServer": true,
    "python.formatting.provider": "black",
    "python.jediPath": "python -m jedi",
    "python.jediEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstylePath": "nix-shell -p python3Packages.pydocstyle --run 'python -m pydocstyle'",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "nix-shell -p python3Packages.mypy --run mypy",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintPath": "pylint",
    "python.formatting.blackPath": "black",
    "python.formatting.yapfPath": "yapf",
    "python.sortImports.path": "isort",
    "python.linting.flake8Path": "flake8",
    "python.condaPath": "~/miniforge3/bin/conda",
    "json.format.enable": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "json",
        "yaml"
    ]
}
